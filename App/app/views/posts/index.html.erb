<h1>Lista wpisów</h1>

<% if user_signed_in? %>


<p><%= link_to "Dodaj nowy post", new_post_path, class:"btn btn-success" %></p>

<!-- Helper z linkiem -->


<table class="table table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Opublikowany?</th>
            <th>Treść</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.author %></td>
            <td><%= post.published ? "tak" : "nie" %></td>
            <td><%= post.body%></td>
            <td>
                <%= link_to "Pokaż", post_path(post), class: "btn btn-primary btn-xs" %>
                <%= link_to "Edytuj", edit_post_path(post), class:"btn btn-secondary btn-xs" %>
                <%= link_to "Usuń", post_path(post), method: :delete, class: "btn btn-danger btn-xs", data:{confirm:"Czy na pewno chcesz usunąć ten wpis?"} %>
            </td>

        </tr>
        <% end %>
    </tbody>
</table>

<% else %>

<%= link_to "Zaloguj się", new_user_session_path %>

<% end %>